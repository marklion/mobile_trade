{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "debug backend",
            "envFile": "/tmp/purpose.env",
            "cwd": "${workspaceFolder}/api",
            "sourceMaps": true,
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "restart": true,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "preLaunchTask": "Select Purpose",
            "postDebugTask": "Reset DB"
        },
    ]
}